{
  // ─────────────────────────────
  // ui / editor
  // ─────────────────────────────
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Default High Contrast",
  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "keyboard.dispatch": "keyCode",
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "settingsSync.ignoredExtensions": [],
  "settingsSync.keybindingsPerPlatform": false,
  "security.workspace.trust.untrustedFiles": "open",

  // ─────────────────────────────
  // javascript / prettier / emmet
  // ─────────────────────────────
  "prettier.printWidth": 120,
  "javascript.format.insertSpaceAfterConstructor": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // ─────────────────────────────
  // python
  // ─────────────────────────────
  "python.languageServer": "Pylance",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },
  "python.testing.autoTestDiscoverOnSaveEnabled": false,

  // ─────────────────────────────
  // java
  // ─────────────────────────────
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },

  // ─────────────────────────────
  // nix
  // ─────────────────────────────
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "nix.enableLanguageServer": true,
  "nix.serverPath": "/home/gabriel/.nix-profile/bin/nil",
  "nix.serverSettings": {
    "nil": {
      "formatting": { "command": ["nixfmt"] }
    }
  },

  // ─────────────────────────────
  // xml / shellscript / associations de fichiers
  // ─────────────────────────────
  "[xml]": {
    "editor.defaultFormatter": "mikeburgh.xml-format"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "files.associations": {
    "*.java": "java",
    "*.py": "python",
    "**/templates/**/*.yaml": "helm"
  },

  // ─────────────────────────────
  // kubernetes / yaml / helm
  // ─────────────────────────────
  "yaml.schemaStore.enable": true,
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "vscode-kubernetes": {
    "kubectl-path": "/home/gabriel/.nix-profile/bin/kubectl",
    "helm-path": "/home/gabriel/.nix-profile/bin/helm",
    "minikube-path": "/home/gabriel/.nix-profile/bin/minikube",
    "log-viewer.wrap": true
  },
  "vs-kubernetes": {
    "disable-lint": false,
    "disable-linters": [
      "resource-limits"
    ],
    "vs-kubernetes.crd-code-completion": "enabled",
    "checkForMinikubeUpgrade": false
  },

  // ─────────────────────────────
  // markdown
  // ─────────────────────────────
  "markdown.copyFiles.destination": {
    "/*": "images/${documentBaseName}/"
  },
  "markdown-preview-enhanced.revealjsTheme": "night.css",
  "markdown-preview-enhanced.previewTheme": "solarized-dark.css",
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },

  // ─────────────────────────────
  // github / remote
  // ─────────────────────────────
  "githubPullRequests.pullBranch": "never",
  "remote.defaultExtensionsIfInstalledLocally": [
    "GitHub.copilot",
    "GitHub.copilot-chat",
    "GitHub.vscode-pull-request-github"
  ],

  // ─────────────────────────────
  // neovim
  // ─────────────────────────────
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "/home/gabriel/.config/nvim/init.lua",

  // ─────────────────────────────
  // docker
  // ─────────────────────────────
  "docker.extension.enableComposeLanguageServer": false,

  // ─────────────────────────────
  // dev containers
  // ─────────────────────────────
  "dev.containers.copyGitConfig": false,

  // ─────────────────────────────
  // terminal
  // ─────────────────────────────
  "terminal.integrated.allowChords": false,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-ExecutionPolicy", "Bypass"]
    }
  },

  // ─────────────────────────────
  // telemetry / privacy (extensions)
  // ─────────────────────────────
  "hardhat.telemetry": false,
  "redhat.telemetry.enabled": false
}